<h1>Products</h1>

<ul>
  {{#each products}}
    <li>
        <span> <b>{{this.title}}</b> </span>
        - <span> Price: ${{this.price}} </span>
        - <span> Stock: {{this.stock}} </span>
        - <span> Category: {{this.category}} </span>
        - <button data-product-id={{this._id}} data-cart-id="653f8cafb29f71d05cf44410" onclick="addProductToCart(this)">Add to cart</button>
    </li>
  {{/each}}
</ul>

<ul>
  Page
  {{#each pages}}
    <a href="http://localhost:8080/views/products?page={{this}}"><button>{{this}}</button></a>
  {{/each}}
</ul>

<a href="http://localhost:8080/views/carts/653f8cafb29f71d05cf44410"><button>Go to cart</button></a>
